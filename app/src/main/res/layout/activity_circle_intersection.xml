<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calculatorbackground"
    tools:context=".CircleIntersectionActivity">

    <TextView
        android:id="@+id/tvCDecimals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#F8F6F6"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/etRadius2" />

    <SeekBar
        android:id="@+id/sbC"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:max="15"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:hint="Digits after the decimal point:"
        android:textColor="#FAF8F8"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etX2" />

    <TextView
        android:id="@+id/tvY2Circle"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@+id/tvYCircle"
        app:layout_constraintTop_toBottomOf="@+id/tvX2Circle" />

    <TextView
        android:id="@+id/tvX2Circle"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@+id/tvXCircle"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:text="Circle #2"
        android:textColor="#FAF6F6"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etX2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="x"
        android:inputType="textPersonName"
        android:textColor="#FBFAFA"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/etY2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginEnd="140dp"
        android:ems="10"
        android:hint="y"
        android:inputType="textPersonName"
        android:textColor="#FAF9F9"
        android:textColorHint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/etX2"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/etRadius2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="radius"
        android:inputType="textPersonName"
        android:textColor="#FAF7F7"
        android:textColorHint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/etX2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Circle #1"
        android:textColor="#F8F7F7"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etX1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="x"
        android:inputType="textPersonName"
        android:textColor="#FDFBFB"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/etY1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/etY1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="y"
        android:inputType="textPersonName"
        android:textColor="#FBFAFA"
        android:textColorHint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/etX1"
        app:layout_constraintEnd_toStartOf="@+id/etRadius1"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/etRadius1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="radius"
        android:inputType="textPersonName"
        android:textColor="#FAF8F8"
        android:textColorHint="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/etX1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/circle"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYCircle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="96dp"
        android:text="Intersection(s):"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etX2" />

    <TextView
        android:id="@+id/tvXCircle"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvCircleX"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/tvYCircle"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvCircleY"
        app:layout_constraintTop_toBottomOf="@+id/tvXCircle"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/tvCircleX"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:textColor="#FAF8F8"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="X" />

    <TextView
        android:id="@+id/tvCircleY"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCircleX"
        tools:text="Y" />

</android.support.constraint.ConstraintLayout>