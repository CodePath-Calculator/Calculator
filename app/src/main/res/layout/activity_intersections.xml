        android:shadowColor="#ECE4E4"
        android:text=" y"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvLine1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvLine1"
        android:layout_width="122dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:background="@color/purple_500"
        android:backgroundTint="#673AB7"
        android:text="Enter Line #1:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/etCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tvLine2"
        android:layout_width="122dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@color/purple_500"
        android:backgroundTint="#673AB7"
        android:text="Enter Line #2:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/etCheckBox2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <TextView
        android:id="@+id/tvLine3"
        android:layout_width="122dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@color/purple_500"
        android:backgroundTint="#673AB7"
        android:text="Enter Line #3:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/etCheckBox3"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2" />

    <Button
        android:id="@+id/btnIntersection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle"
        android:backgroundTint="#673AB7"
        android:text="Find Intersection"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLine3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="Enter Lines"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvXInt"
        android:layout_width="162dp"
        android:layout_height="27dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="112dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:textColor="#F8F5F5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIntersection" />

    <TextView
        android:id="@+id/tvYResult"
