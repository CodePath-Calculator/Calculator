        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/etb"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvPlus"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/tvPlus2"
        android:layout_width="16dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#ECE4E4"
        android:text=" +"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvX2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <EditText
        android:id="@+id/etb3"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvPlus3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvX3"
        android:layout_width="12dp"
        android:layout_height="23dp"
        android:layout_marginTop="30dp"
        android:shadowColor="#ECE4E4"
        android:text="x"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/etSlope3"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2" />

    <EditText
        android:id="@+id/etb2"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvPlus2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <TextView
        android:id="@+id/tvX2"
        android:layout_width="12dp"
        android:layout_height="23dp"
        android:layout_marginTop="30dp"
        android:shadowColor="#ECE4E4"
        android:text="x"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/etSlope2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <TextView
        android:id="@+id/tvPlus"
        android:layout_width="16dp"
        android:layout_height="33dp"
        android:layout_marginTop="116dp"
        android:shadowColor="#ECE4E4"
        android:text=" +"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvX"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etSlope"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvEqual"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/etSlope2"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvEqual2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <EditText
        android:id="@+id/etSlope3"
        android:layout_width="64dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#ECE4E4"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvEqual3"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2" />

    <TextView
        android:id="@+id/tvEqual"
        android:layout_width="9dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="116dp"
        android:shadowColor="#ECE4E4"
        android:text="="
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvY"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvEqual2"
        android:layout_width="9dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#ECE4E4"
        android:text="="
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvY2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <TextView
        android:id="@+id/tvEqual3"
        android:layout_width="9dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#ECE4E4"
        android:text="="
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvY3"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2" />

    <TextView
        android:id="@+id/tvY3"
        android:layout_width="13dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28sp"
        android:shadowColor="#ECE4E4"
        android:text=" y"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvLine3"
        app:layout_constraintTop_toBottomOf="@+id/tvLine2" />

    <TextView
        android:id="@+id/tvY2"
        android:layout_width="13dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:shadowColor="#ECE4E4"
        android:text=" y"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvLine2"
        app:layout_constraintTop_toBottomOf="@+id/tvLine1" />

    <TextView
        android:id="@+id/tvY"
        android:layout_width="13dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
