        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:text="Y:"
        android:textColor="#F8F3F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXResult" />

    <TextView
        android:id="@+id/tvXResult"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="76dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:text="X:"
        android:textColor="#F8F3F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIntersection" />

    <TextView
        android:id="@+id/tvYInt"
        android:layout_width="162dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:textColor="#F8F5F5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXInt" />

    <EditText
        android:id="@+id/etCheckBox"
        android:layout_width="20dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="X"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCheckBox2"
        android:layout_width="20dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:hint="X"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCheckBox3"
        android:layout_width="20dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:hint="X"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="197dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="(Enter X for each line used)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>